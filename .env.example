###############################################
# CodeReview.pl â€” Environment Configuration
# Copy this file to .env and adjust values for your environment
###############################################

# Application
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=Europe/Warsaw

# Site Configuration
SITE_NAME=CodeReview.pl
SITE_URL=http://localhost:8080
SITE_EMAIL=noreply@codereview.pl
SITE_ADMIN_EMAIL=admin@codereview.pl

# Database (SQLite by default)
DB_DRIVER=sqlite
DB_DATABASE=/var/www/vhosts/codereview.pl/httpdocs/database/codereview.db
DB_USERNAME=null
DB_PASSWORD=null

# Alternative: MySQL (comment out SQLite above to use)
# DB_DRIVER=mysql
# DB_HOST=db
# DB_PORT=3306
# DB_DATABASE=codereview
# DB_USERNAME=codereview
# DB_PASSWORD=codereview_secret
# DB_ROOT_PASSWORD=root_secret

# Docker Services
WEB_PORT=8080
WEB_SSL_PORT=8443
DB_PORT_EXTERNAL=3306
PHPMYADMIN_PORT=8081
MAILHOG_SMTP_PORT=1026
MAILHOG_WEB_PORT=8025

# Docker Hostnames
WEB_HOST=localhost
DB_HOST=db
PHPMYADMIN_HOST=localhost
MAILHOG_HOST=localhost

# Docker URLs
WEB_URL=http://localhost:8080
WEB_SSL_URL=https://localhost:8443
PHPMYADMIN_URL=http://localhost:8081
MAILHOG_URL=http://localhost:8025
MAIL_SMTP_URL=smtp://localhost:1026

# Mail Configuration (Development - MailHog)
MAIL_DRIVER=smtp
MAIL_HOST=mail
MAIL_PORT=1026
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@codereview.pl
MAIL_FROM_NAME="${SITE_NAME}"

# Security
APP_KEY=base64:YOUR_RANDOM_32_CHAR_KEY_HERE
JWT_SECRET=your_jwt_secret_here
CSRF_TOKEN=your_csrf_token_here

# Pricing (in PLN)
PRICE_MARKETPLACE_LISTING=99
PRICE_PREMIUM_HUB_MONTHLY=49
PRICE_PREMIUM_HUB_YEARLY=499
PRICE_CODE_REVIEW_BASIC=299
PRICE_CODE_REVIEW_ADVANCED=599

# Feature Flags
FEATURE_REGISTRATION=true
FEATURE_MARKETPLACE=true
FEATURE_PREMIUM_HUB=true
FEATURE_API_ACCESS=false

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_PATH=/var/www/vhosts/system/codereview/logs/app.log

# Cache
CACHE_DRIVER=file
CACHE_PREFIX=codereview_

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# File Uploads
UPLOAD_MAX_SIZE=128M
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,zip
UPLOAD_PATH=/var/www/vhosts/codereview.pl/httpdocs/uploads

# API Configuration
API_RATE_LIMIT=60
API_TIMEOUT=30
API_VERSION=v1

# External Services
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# GOOGLE_RECAPTCHA_SITE_KEY=your_site_key
# GOOGLE_RECAPTCHA_SECRET=your_secret_key
# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret

# Development Only
DEV_XDEBUG_ENABLED=false
DEV_PROFILER_ENABLED=false
DEV_MAILHOG_ENABLED=true
